---
format: hypermake.v0

targets:
  get-openssl:
    description: download openssl source
    after:
      - toolchain
    cmds:
      - unpack-url.sh openssl https://www.openssl.org/source/openssl-1.1.0h.tar.gz

  build-dep-openssl-[arch:amd64,armhf]:
    description: build openssl
    after:
      - get-openssl
      - build-dep-zlib-$[arch]
    watches:
      - openssl.build.sh
    env:
      - MAKE_OPTS
    cmds:
      - ./openssl.build.sh $[arch]
