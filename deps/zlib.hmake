---
format: hypermake.v0

targets:
  get-zlib:
    description: download zlib source
    after:
      - toolchain
    cmds:
      - unpack-url.sh zlib http://zlib.net/zlib-1.2.11.tar.gz

  build-dep-zlib-[arch:amd64,armhf]:
    description: build zlib
    after:
      - get-zlib
    watches:
      - zlib.build.sh
    env:
      - MAKE_OPTS
    cmds:
      - ./zlib.build.sh $[arch]
